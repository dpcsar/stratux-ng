# Stratux-NG base network configuration
# wlan0 defaults to AP mode on 192.168.10.1/24; eth0 stays DHCP.

source-directory /etc/network/interfaces.d

auto lo
iface lo inet loopback

allow-hotplug eth0
iface eth0 inet dhcp

allow-hotplug wlan0
iface wlan0 inet static
    address 192.168.10.1
    netmask 255.255.255.0
    metric 100
    pre-up /usr/local/sbin/stratux-ng-create-ap0 || true
    post-up /usr/bin/logger -t stratux-ng "wlan0 static configuration applied"
